$(HIDDEN_ABILITY_TABLE_BIN): $(HIDDEN_ABILITY_TABLE_DEPENDENCIES)
	$(CC) $(CFLAGS) -c $< -o $(HIDDEN_ABILITY_TABLE_OBJS)
	$(OBJCOPY) -O binary $(HIDDEN_ABILITY_TABLE_OBJS) $@

NARC_FILES += $(HIDDEN_ABILITY_TABLE_BIN)

